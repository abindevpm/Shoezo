
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">







<header class="navbar-custom">
  <div class="container-xl">
    <div class="navbar-inner">

      <!-- LOGO -->
      <a href="/" class="logo">SHOEZO</a>

      <!-- NAV -->
      <nav class="nav-links">
        <a href="/">Home</a>
        <a href="/productlist">Shop</a>
        <a href="/orders">Orders</a>
      </nav>

      <!-- SEARCH -->
      <form action="/productlist" method="GET" class="search-box d-none d-lg-block">
        <input
          type="text"
          name="search"
          placeholder="Search"
          value="<%= typeof search !== 'undefined' ? search : '' %>"
        >
        <button type="submit">
          <i class="fa-solid fa-magnifying-glass"></i>
        </button>
      </form>

      <!-- USER -->
      <div class="user-area">

        <% if (locals.user && locals.user.name) { %>
          <% const initial = locals.user.name.charAt(0).toUpperCase(); %>

          <div class="dropdown">
            <button class="user-btn" data-bs-toggle="dropdown">
              <div class="avatar"><%= initial %></div>
              <span><%= locals.user.name %></span>
              <i class="fa-solid fa-chevron-down"></i>
            </button>

            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/profile">My Profile</a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
            </ul>
          </div>

        <% } else { %>
          <a href="/login">Login</a>
          <a href="/signup">Signup</a>
        <% } %>

      </div>
    </div>
  </div>
</header>



<style>


  /* ===== EXACT TAILWIND NAVBAR LOOK ===== */

.navbar-custom {
  background: #fff;
  position: sticky;
  top: 0;
  z-index: 50;
  border-bottom: 1px solid #e5e7eb;
}

.navbar-inner {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16px 0;
}

/* LOGO */
.logo {
  font-size: 28px;
  font-weight: 800;
  letter-spacing: 0.1em;
  color: #000;
  text-decoration: none;
}

/* NAV LINKS */
.nav-links {
  display: flex;
  gap: 24px;
  font-weight: 500;
}

.nav-links a {
  text-decoration: none;
  color: #4b5563;
}

.nav-links a:hover {
  color: #000;
}

/* SEARCH */
.search-box {
  position: relative;
}

.search-box input {
  width: 256px;
  padding: 8px 40px 8px 16px;
  border-radius: 9999px;
  border: 1px solid #d1d5db;
  font-size: 14px;
  outline: none;
}

.search-box input:focus {
  border-color: #374151;
}

.search-box button {
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  background: none;
  border: none;
  color: #6b7280;
}

/* USER AREA */
.user-area {
  display: flex;
  align-items: center;
  gap: 24px;
}

.user-area a {
  text-decoration: none;
  font-weight: 500;
  color: #4b5563;
}

.user-area a:hover {
  color: #000;
}

/* USER BUTTON */
.user-btn {
  display: flex;
  align-items: center;
  gap: 8px;
  background: none;
  border: none;
  font-weight: 600;
}

/* AVATAR */
.avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg,#667eea,#764ba2);
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
}

</style>