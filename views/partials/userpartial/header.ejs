<header class="bg-white sticky top-0 z-50 shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4 
              flex flex-col md:flex-row justify-between items-center gap-4">

    <!-- LOGO -->
    <a href="/" class="flex items-center space-x-2 text-3xl font-extrabold tracking-widest text-black">
      <span>SHOEZO</span>
    </a>

    <!-- NAVIGATION -->
    <nav class="flex space-x-6 text-gray-600 font-medium">
      <a href="/" class="hover:text-black">Home</a>
      <a href="/productlist" class="hover:text-black">Shop</a>
      <a href="/orders" class="hover:text-black">Orders</a>
    </nav>

    <!-- SEARCH BAR -->
    <form action="/productlist" method="GET" class="relative hidden lg:block">
      <input 
        type="text" 
        name="search" 
        placeholder="Search"
        value="<%= typeof search !== 'undefined' ? search : '' %>"
        class="border border-gray-300 rounded-full py-2 pl-4 pr-10 text-sm 
               focus:outline-none focus:ring-2 focus:ring-gray-700 
               transition duration-150 w-64"
      >
      <button type="submit" class="absolute right-0 top-0 mt-2 mr-3 text-gray-500 hover:text-black">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z">
          </path>
        </svg>
      </button>
    </form>

    <!-- USER DROPDOWN / LOGIN -->
    <div class="flex items-center space-x-6">
      <% if (locals.user) { %>
        <div class="relative">
          <button id="userMenuBtn" class="flex items-center gap-1 font-semibold cursor-pointer">
            <%= locals.user.name %>
            <span class="text-xs">â–¼</span>
          </button>

          <div id="userDropdown"
            class="hidden absolute right-0 mt-2 w-40 bg-white border border-gray-200 
                   rounded-lg shadow-lg z-50">
            <a href="/user/profile" class="block px-4 py-2 hover:bg-gray-100">My Profile</a>
            <a href="/logout" class="block px-4 py-2 hover:bg-gray-100 text-red-600">Logout</a>
          </div>
        </div>
      <% } else { %>
        <a href="/login" class="font-medium text-gray-700 hover:text-blue-600">Login</a>
        <a href="/signup" class="font-medium text-gray-700 hover:text-blue-600">Signup</a>
      <% } %>
    </div>

  </div>
</header>
