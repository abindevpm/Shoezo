<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZO - Order Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            padding-top: 60px;
            overflow-x: hidden;
        }

        .sidebar-container {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            top: 60px;
            left: 0;
            z-index: 1020;
        }

        .main-content {
            margin-left: 250px;
            padding: 40px;
            width: calc(100% - 250px);
            min-height: calc(100vh - 60px);
        }

        .header-title {
            font-weight: 700;
            color: #000;
            margin-bottom: 5px;
        }

        .header-subtitle {
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .filter-section {
            display: flex;
            gap: 15px;
            margin-bottom: 30px;
            align-items: center;
        }

        .search-box {
            flex: 1;
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            padding: 10px 15px;
            display: flex;
            align-items: center;
            background: #fff;
        }

        .search-box input {
            border: none;
            outline: none;
            width: 100%;
            margin-left: 10px;
            font-size: 14px;
        }

        .filter-select {
            border-radius: 10px;
            border: 1px solid #e0e0e0;
            padding: 10px 20px;
            font-size: 14px;
            min-width: 180px;
            background: #fff;
        }

        .btn-filter {
            background: #1a1a1a;
            color: #fff;
            border: none;
            border-radius: 10px;
            padding: 10px 30px;
            font-weight: 500;
            font-size: 14px;
        }

        .btn-filter:hover {
            background: #333;
            color: #fff;
        }

        .table-container {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .table thead {
            background: #1a1a1a;
            color: #fff;
        }

        .table th {
            border: none;
            padding: 15px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            vertical-align: middle;
        }

        .table td {
            padding: 15px;
            font-size: 14px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
        }

        .badge-status {
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
            border: none;
            display: inline-block;
            min-width: 110px;
            text-align: center;
        }

        /* Payment Status Badges */
        .pay-paid {
            background: #2ecc71;
            color: #fff;
        }

        .pay-unpaid {
            background: #e74c3c;
            color: #fff;
        }

        .pay-pending {
            background: #f1c40f;
            color: #fff;
        }

        .pay-refunded {
            background: #9b59b6;
            color: #fff;
        }

        /* Order Status Badges */
        .status-delivered {
            background: #00bcd4;
            color: #fff;
        }

        .status-returned {
            background: #f39c12;
            color: #fff;
        }

        .status-cancelled {
            background: #ff5252;
            color: #fff;
        }

        .status-shipped {
            background: #2196f3;
            color: #fff;
        }

        .status-placed {
            background: #607d8b;
            color: #fff;
        }

        .status-processing {
            background: #2196f3;
            color: #fff;
        }

        .status-requested {
            background: #9e9e9e;
            color: #fff;
        }

        .pagination-link {
            color: #1a1a1a;
            border: 1px solid #e0e0e0;
            padding: 8px 15px;
            border-radius: 8px;
            text-decoration: none;
            margin: 0 5px;
        }

        .pagination-link.active {
            background: #1a1a1a;
            color: #fff;
            border-color: #1a1a1a;
        }

        .action-icon {
            cursor: pointer;
            color: #666;
            font-size: 18px;
            margin-left: 10px;
        }

        .action-icon:hover {
            color: #000;
        }
    </style>
</head>

<body>
    <%- include('../partials/admin/navbar.ejs') %>
        <div class="d-flex w-100">
            <div class="sidebar-container">
                <%- include('../partials/admin/sidebar.ejs') %>
            </div>
            <div class="main-content flex-grow-1">
                <h1 class="header-title">Orders</h1>
                <p class="header-subtitle">Track and manage your customer orders</p>

                <div class="filter-section">
                    <div class="search-box">
                        <i class="fas fa-search text-muted"></i>
                        <input type="text" id="orderSearch" placeholder="Search by Order ID or Amount..."
                            value="<%= search %>">
                    </div>

                    <select id="statusFilter" class="filter-select">
                        <option <%=statusFilter==='All Status' ? 'selected' : '' %>>All Status</option>
                        <option value="Placed" <%=statusFilter==='Placed' ? 'selected' : '' %>>Placed</option>
                        <option value="Processing" <%=statusFilter==='Processing' ? 'selected' : '' %>>Processing
                        </option>
                        <option value="Shipped" <%=statusFilter==='Shipped' ? 'selected' : '' %>>Shipped</option>
                        <option value="Delivered" <%=statusFilter==='Delivered' ? 'selected' : '' %>>Delivered</option>
                        <option value="Cancelled" <%=statusFilter==='Cancelled' ? 'selected' : '' %>>Cancelled</option>
                        <option value="Returned" <%=statusFilter==='Returned' ? 'selected' : '' %>>Returned</option>
                    </select>

                    <select id="paymentFilter" class="filter-select">
                        <option <%=paymentFilter==='All Payments' ? 'selected' : '' %>>All Payments</option>
                        <option value="Paid" <%=paymentFilter==='Paid' ? 'selected' : '' %>>Paid</option>
                        <option value="Pending" <%=paymentFilter==='Pending' ? 'selected' : '' %>>Pending</option>
                        <option value="Refunded" <%=paymentFilter==='Refunded' ? 'selected' : '' %>>Refunded</option>
                    </select>

                    <button class="btn-filter" onclick="applyFilters()">Filter</button>
                </div>

                <div class="table-container">
                    <table class="table text-center mb-0">
                        <thead>
                            <tr>
                                <th>SL NO.</th>
                                <th>DATE</th>
                                <th>ORDER ID</th>
                                <th>AMOUNT</th>
                                <th>PAYMENT</th>
                                <th>PAYMENT STATUS</th>
                                <th>ORDER STATUS</th>
                                <th>ACTION</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (orders && orders.length> 0) { %>
                                <% orders.forEach((order, index)=> { %>
                                    <tr>
                                        <td class="text-muted">
                                            <%= ((currentPage - 1) * 10) + index + 1 %>
                                        </td>
                                        <td>
                                            <%= new Date(order.createdAt).toLocaleDateString() %>
                                        </td>
                                        <td class="fw-bold">#<%= order.orderId %>
                                        </td>
                                        <td class="fw-bold">â‚¹<%= order.totalAmount.toFixed(2) %>
                                        </td>
                                        <td class="text-muted small">
                                            <%= order.paymentMethod %>
                                        </td>
                                        <td>
                                            <span
                                                class="badge-status <%= order.paymentStatus === 'Paid' ? 'pay-paid' : (order.paymentStatus === 'Pending' ? 'pay-unpaid' : 'pay-refunded') %>">
                                                <%= order.paymentStatus==='Pending' ? 'UNPAID' :
                                                    (order.paymentStatus==='Paid' ? 'PAID' : 'REFUNDED' ) %>
                                            </span>
                                        </td>
                                        <td>
                                            <span
                                                class="badge-status status-<%= order.status.toLowerCase().replace(' ', '-') %>">
                                                <%= order.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/admin/orders/details/<%= order._id %>" class="action-icon"
                                                title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="/admin/orders/edit/<%= order._id %>"
                                                class="action-icon text-primary ms-3" title="Edit Order">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="8" class="py-5 text-muted">No orders found.</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>

                <% if (totalPages> 1) { %>
                    <div class="d-flex justify-content-center mt-4">
                        <% for(let i=1; i <=totalPages; i++) { %>
                            <a href="?page=<%= i %>&search=<%= search %>&status=<%= statusFilter %>&paymentStatus=<%= paymentFilter %>"
                                class="pagination-link <%= currentPage === i ? 'active' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>
                    </div>
                    <% } %>
            </div>
        </div>

        <script>
            function applyFilters() {
                const search = document.getElementById('orderSearch').value.trim();
                const status = document.getElementById('statusFilter').value;
                const payment = document.getElementById('paymentFilter').value;

                let url = `/admin/orders?page=1`;
                if (search) url += `&search=${encodeURIComponent(search)}`;
                if (status !== 'All Status') url += `&status=${status}`;
                if (payment !== 'All Payments') url += `&paymentStatus=${payment}`;

                window.location.href = url;
            }

            async function updateOrderStatus(orderId, status) {
                try {
                    const response = await fetch('/admin/orders/update-status', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, status })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire({ icon: 'success', title: 'Updated', text: data.message, showConfirmButton: false, timer: 1500 })
                            .then(() => location.reload());
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Something went wrong', 'error');
                }
            }

            async function updatePaymentStatus(orderId, paymentStatus) {
                try {
                    const response = await fetch('/admin/orders/update-payment', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId, paymentStatus })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire({ icon: 'success', title: 'Updated', text: data.message, showConfirmButton: false, timer: 1500 })
                            .then(() => location.reload());
                    } else {
                        Swal.fire('Error', data.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Something went wrong', 'error');
                }
            }

            // Search on Enter
            document.getElementById('orderSearch').addEventListener('keypress', function (e) {
                if (e.key === 'Enter') applyFilters();
            });
        </script>
</body>

</html>