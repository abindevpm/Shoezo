<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZO - Returns Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8f9fa;
            padding-top: 60px;
            overflow-x: hidden;
        }

        .sidebar-container {
            width: 250px;
            min-height: 100vh;
            position: fixed;
            top: 60px;
            left: 0;
            z-index: 1020;
        }

        .main-content {
            margin-left: 250px;
            padding: 40px;
            width: calc(100% - 250px);
            min-height: calc(100vh - 60px);
        }

        .header-title {
            font-weight: 700;
            color: #000;
            margin-bottom: 5px;
        }

        .header-subtitle {
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .table-container {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            overflow: hidden;
        }

        .table thead {
            background: #1a1a1a;
            color: #fff;
        }

        .table th {
            border: none;
            padding: 15px;
            font-size: 13px;
            font-weight: 600;
            text-transform: uppercase;
            vertical-align: middle;
        }

        .table td {
            padding: 15px;
            font-size: 14px;
            vertical-align: middle;
            border-bottom: 1px solid #f0f0f0;
        }

        .product-list {
            display: flex;
            flex-direction: column;
            gap: 5px;
            align-items: start;
        }

        .product-mini {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 12px;
        }

        .product-mini img {
            width: 30px;
            height: 30px;
            object-fit: cover;
            border-radius: 4px;
        }

        .badge-reason {
            background: #fff4e5;
            border: 1px solid #ffd8a8;
            padding: 6px 12px;
            border-radius: 6px;
            font-size: 12px;
            color: #d9480f;
            font-weight: 500;
            cursor: pointer;
            display: inline-block;
            max-width: 150px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .btn-action {
            border-radius: 8px;
            font-weight: 600;
            font-size: 13px;
            padding: 8px 16px;
            border: none;
            transition: all 0.2s;
        }

        .btn-approve {
            background: #2ecc71;
            color: #fff;
        }

        .btn-approve:hover {
            background: #27ae60;
            transform: translateY(-1px);
        }

        .btn-reject {
            background: #ff5252;
            color: #fff;
        }

        .btn-reject:hover {
            background: #e04848;
            transform: translateY(-1px);
        }

        .view-link {
            color: #1a1a1a;
            text-decoration: none;
            font-weight: 600;
            font-size: 13px;
        }

        .view-link:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <%- include('../partials/admin/navbar.ejs') %>
        <div class="d-flex w-100">
            <div class="sidebar-container">
                <%- include('../partials/admin/sidebar.ejs') %>
            </div>
            <div class="main-content flex-grow-1">
                <h1 class="header-title">Returns</h1>
                <p class="header-subtitle">Process and manage returned orders</p>

                <div class="table-container">
                    <table class="table text-center mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th>Items</th>
                                <th>Reason</th>
                                <th>Amount</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (orders && orders.length> 0) { %>
                                <% orders.forEach(order=> { %>
                                    <tr>
                                        <td>
                                            <div class="fw-bold text-dark">#<%= order.orderId %>
                                            </div>
                                            <div class="mt-1"><a href="/admin/orders/details/<%= order._id %>"
                                                    class="view-link">View Order</a></div>
                                        </td>
                                        <td class="text-start">
                                            <div class="fw-bold">
                                                <%= order.userId ? order.userId.name : 'Unknown' %>
                                            </div>
                                            <div class="text-muted small">
                                                <%= order.userId ? order.userId.email : '' %>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="product-list">
                                                <% order.items.forEach(item=> { %>
                                                    <div
                                                        class="product-mini <%= item.itemStatus === 'Return Requested' ? 'border border-warning p-1 rounded' : '' %>">
                                                        <img src="/uploads/product-images/<%= item.productId.images[0] %>"
                                                            alt="">
                                                        <span>
                                                            <%= item.productId.name %> (x<%= item.quantity %>)
                                                                    <span class="badge bg-secondary"
                                                                        style="font-size: 8px;">
                                                                        <%= item.itemStatus %>
                                                                    </span>
                                                        </span>
                                                        <% if (item.itemStatus==='Return Requested' &&
                                                            item.returnReason) { %>
                                                            <div class="small text-muted ms-4">Reason: <%=
                                                                    item.returnReason %>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                        </td>
                                        <td>
                                            <% const requestedItems=order.items.filter(i=> i.itemStatus === 'Return
                                                Requested'); %>
                                                <% if (requestedItems.length> 0) { %>
                                                    <div class="badge-reason"
                                                        title="<%= requestedItems[0].returnReason %>"
                                                        onclick="Swal.fire({title: 'Return Reason', text: '<%= requestedItems[0].returnReason %>', icon: 'info', confirmButtonColor: '#1a1a1a'})">
                                                        <%= requestedItems[0].returnReason %>
                                                    </div>
                                                    <% } else { %>
                                                        <span class="text-muted small">No pending item returns</span>
                                                        <% } %>
                                        </td>
                                        <td class="fw-bold text-dark">â‚¹<%= order.totalAmount.toFixed(2) %>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2 justify-content-center">
                                                <button class="btn-action btn-approve"
                                                    onclick="handleReturnAction('<%= order._id %>', 'Returned')">Approve</button>
                                                <button class="btn-action btn-reject"
                                                    onclick="handleReturnAction('<%= order._id %>', 'Return Rejected')">Reject</button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="6" class="py-5 text-muted">
                                                    <i class="fas fa-box-open fa-3x mb-3 d-block"></i>
                                                    No pending return requests found.
                                                </td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <script>
            async function handleReturnAction(orderId, status) {
                const action = status === 'Returned' ? 'approve' : 'reject';
                const result = await Swal.fire({
                    title: 'Confirm Action',
                    text: `Are you sure you want to ${action} this return?`,
                    icon: 'question',
                    showCancelButton: true,
                    confirmButtonColor: status === 'Returned' ? '#2ecc71' : '#ff5252',
                    cancelButtonColor: '#adb5bd',
                    confirmButtonText: 'Yes, Proceed'
                });

                if (result.isConfirmed) {
                    try {
                        const response = await fetch('/admin/orders/update-status', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({ orderId, status })
                        });
                        const data = await response.json();
                        if (data.success) {
                            Swal.fire({
                                icon: 'success',
                                title: 'Updated',
                                text: data.message,
                                showConfirmButton: false,
                                timer: 1500
                            }).then(() => location.reload());
                        } else {
                            Swal.fire('Error', data.message, 'error');
                        }
                    } catch (error) {
                        Swal.fire('Error', 'An error occurred while processing', 'error');
                    }
                }
            }
        </script>
</body>

</html>