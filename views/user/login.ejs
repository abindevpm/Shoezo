<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>SHOEZO - Login</title>

  <!-- Bootstrap 5 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <style>
    body {
      background-color: #111;
      margin: 0;
      padding: 0;
      font-family: 'Helvetica Neue', Arial, sans-serif;
    }

    /* Custom input style - exactly like your gray rounded pills */
    .custom-input {
      background-color: #9ca3af !important; /* gray-400
      border: none;
      border-radius: 9999px !important;
      padding: 1rem 1.25rem;
      transition: background-color 0.3s;
    }
    .custom-input:hover {
      background-color: #6b7280 !important; /* gray-500 */
    }
    .custom-input:focus {
      background-color: #6b7280 !important;
      box-shadow: none;
      color: white;
    }
    .custom-input::placeholder {
      color: #374151; /* gray-700 */
      font-weight: 500;
    }

    /* Buttons - black rounded pills */
    .btn-custom {
      background-color: #000;
      color: white;
      font-weight: bold;
      padding: 0.75rem 2rem;
      border-radius: 9999px;
      transition: background-color 0.3s;
    }
    .btn-custom:hover {
      background-color: #111;
      color: white;
    }

    /* Right side gradient background */
    .right-panel {
      background: linear-gradient(to bottom right, #6b7280, #9ca3af);
    }

    /* Logo text */
    .logo-text {
      font-size: 4.5rem;
      font-weight: 900;
      font-style: italic;
      letter-spacing: -2px;
    }
    @media (min-width: 768px) {
      .logo-text {
        font-size: 5.5rem;
      }
    }

    /* Image cover */
    .shoe-img {
      object-fit: cover;
      width: 100%;
      height: 100%;
      filter: drop-shadow(0 20px 40px rgba(0,0,0,0.6));
    }
  </style>
</head>
<body>

  <div class="min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container-fluid p-0">
      <div class="row g-0 min-vh-100">

        <!-- LEFT PANEL -->
        <div class="col-12 col-md-6 bg-white d-flex align-items-center justify-content-center p-5 p-md-0">
          <div class="w-100" style="max-width: 420px;">

            <h1 class="logo-text text-black mb-4 text-center text-md-start">SHOEZO</h1>
            <h2 class="h3 fw-bold text-black mb-5 text-center text-md-start tracking-wider">LOGIN</h2>

            <form id="loginForm" method="POST" action="/login">

              <!-- Email -->
              <div class="mb-4">
                <input type="email" name="email" class="form-control custom-input text-black fw-medium" 
                       placeholder="Email" required>
              </div>

              <!-- Password -->
              <div class="mb-3">
                <input type="password" name="password" class="form-control custom-input text-black fw-medium" 
                       placeholder="Password" required>
              </div>

              <!-- Error Message from Server -->
              <% if (typeof message !== "undefined") { %>
                <div class="text-danger text-center fw-semibold mb-4">
                  <%= message %>
                </div>
              <% } %>

              <!-- Buttons -->
              <div class="d-flex justify-content-center gap-3 mb-5 mt-4 flex-wrap">
                <button type="submit" class="btn btn-custom">
                  Login Now
                </button>
                <button type="button" class="btn btn-custom" onclick="handleSignup()">
                  Sign up
                </button>
              </div>

              <div class="text-center">
                <a href="#forgot" class="text-secondary small fw-medium text-decoration-none hover-text-black">
                  forgot password
                </a>
              </div>

            </form>
          </div>
        </div>

        <!-- RIGHT PANEL - Image -->
        <div class="col-12 col-md-6 d-none d-md-block right-panel overflow-hidden position-relative">
          <img src="/images/login page.jpg" alt="Nike Shoe" class="shoe-img">
        </div>

      </div>
    </div>
  </div>

  <!-- Bootstrap JS (optional) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    function handleSignup() {
      alert('Redirecting to signup page');
      // window.location.href = '/signup'; // Uncomment when ready
    }

    function handleGoogleLogin(e) {
      e.preventDefault();
      alert('Google login integration would go here');
    }
  </script>
</body>
</html>