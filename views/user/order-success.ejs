}

/* Success center */
.success-content {
  margin-top: 80px;
  text-align: center;
}

.success-icon {
  width: 80px;
  height: 80px;
  border: 6px solid #22c55e;
  border-radius: 50%;
  color: #22c55e;
  font-size: 42px;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 24px;
}

.success-content h2 {
  font-size: 22px;
  font-weight: 700;
  margin-bottom: 12px;
}

.success-text {
  font-size: 14px;
  color: #555;
  line-height: 1.6;
  margin-bottom: 28px;
}

/* Button */
.continue-btn {
  display: inline-block;
  background: #000;
  color: #fff;
  padding: 14px 32px;
  border-radius: 30px;
  font-size: 15px;
  font-weight: 600;
  text-decoration: none;
}

/* Mobile */
@media (max-width: 600px) {
  .order-status-bar {
    flex-direction: column;
    gap: 10px;
    border-radius: 20px;
  }
}

