  font-family: Arial, Helvetica, sans-serif;
}

body {
  background: #fff;
}

.order-success-wrapper {
  max-width: 900px;
  margin: 40px auto;
  padding: 0 16px;
}

/* Top bar */
.order-status-bar {
  background: #000;
  color: #fff;
