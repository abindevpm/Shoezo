<body>

    <%- include("../partials/userpartial/header.ejs") %>

    <div class="container">
        <aside>
            <div class="user-header">
           

                <img
    src="<%= user.profileImage && user.profileImage !== '' 
          ? user.profileImage 
          : '/images/default avatar ong.jpg' %>"
    alt="User"
  >
            
                <%= user.name %>

            </div>
            <a href="#" class="menu-item active"><i class="fas fa-th-large"></i> Account Overview</a>
            <a href="#" class="menu-item"><i class="fas fa-box"></i> My Orders</a>
            <a href="#" class="menu-item"><i class="fas fa-address-book"></i> Manage Addresses</a>
            <a href="#" class="menu-item"><i class="fas fa-wallet"></i> Wallet</a>
            <a href="#" class="menu-item"><i class="fas fa-ticket-alt"></i> coupons</a>
            <a href="#" class="menu-item"><i class="fas fa-users"></i> Refer & Earn</a>
            <a href="#" class="menu-item" style="margin-top: 60px; border-bottom: none;"><i class="fas fa-sign-out-alt"></i> logout</a>
        </aside>

        <main>


             <h2 style="font-size:22px; margin-bottom:6px;">Manage Addresses</h2>
  <p style="font-size:13px; color:#777; margin-bottom:25px;">
    Here you can manage the addresses. You can Add, edit or delete the addresses
  </p>

  <!-- Add Address Button -->
<a href="/addAdress" style="
  display:block;
  width:100%;
  background:#000;
  color:#fff;
  padding:14px;
  border-radius:30px;
  font-size:14px;
  text-align:left;
  margin-bottom:25px;
  text-decoration:none;
">
  <i class="fas fa-plus-circle" style="margin-right:10px;"></i>
  Add New Address
</a>
  <% if (addresses.length === 0) { %>
  <p style="font-size:13px; color:#777;">
    No addresses added yet.
  </p>
<% } %>

<% addresses.forEach(address => { %>

  <div class="address-card">

    <% if (address.isDefault) { %>
      <span class="badge">Default</span>
    <% } %>

    <p>
      <%= address.fullName %>,<br>
      <%= address.addressLine %>,<br>
      <%= address.city %>, <%= address.state %><br>
      <%= address.pincode %><br>
      Mobile: <%= address.phone %>
    </p>

    <div class="card-actions">
      <a href="/editAddress/<%= address._id %>">Edit</a>
<a href="javascript:void(0)"
   onclick="confirmDelete('<%= address._id %>')">
   Delete
</a>


    </div>

  </div>

<% }) %>


   
        </main>
    </div>

    <%- include("../partials/userpartial/footer.ejs") %>

</body>
</html>

<script>
function confirmDelete(addressId) {
  Swal.fire({
    title: "Delete Address?",
    text: "This address will be permanently removed",
    icon: "warning",
    showCancelButton: true,
    confirmButtonColor: "#d33",
    cancelButtonColor: "#555",
    confirmButtonText: "Yes, delete",
    cancelButtonText: "Cancel"
  }).then((result) => {
    if (result.isConfirmed) {
      window.location.href = `/address/delete/${addressId}`;
    }
  });
}
</script>

