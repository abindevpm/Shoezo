.account-card {
  background: #fff;
  padding: 30px;
  border-radius: 14px;
  max-width: 520px;
}

.input-group {
  margin-bottom: 18px;
}

.email-section {
  margin-top: 30px;
  border-top: 1px solid #eee;
  padding-top: 20px;
}

.email-row {
  display: flex;
  gap: 10px;
  align-items: center;
}


.edit-btn {
  background: #000;
  color: #fff;
  border: none;
  padding: 10px 26px;
  border-radius: 25px;      /* same pill shape */
  font-size: 13px;          /* same as black-btn */
  font-weight: 500;
  cursor: pointer;
  text-decoration: none;
  display: inline-flex;
  align-items: center;
  gap: 6px;
}

.edit-btn:hover {
  opacity: 0.85;
}


.address-card {
  border: 1px solid #ddd;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 18px;
  position: relative;
  box-shadow: 0 2px 6px rgba(0,0,0,0.12);
}

.address-card p {
  font-size: 13px;
  line-height: 1.6;
  color: #444;
}

.badge {
  background: #555;
  color: #fff;
  font-size: 10px;
  padding: 3px 10px;
  border-radius: 10px;
  text-transform: uppercase;
}

.badge.blue {
  background: #3b82f6;
}

.card-actions {
  position: absolute;
  bottom: 18px;
  right: 20px;
}

.card-actions a {
  font-size: 12px;
  color: #333;
  margin-left: 15px;
  text-decoration: none;
}



