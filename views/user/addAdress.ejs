<script>
function validateAddAddressForm() {

  let isValid = true;

  
  document.querySelectorAll(".error").forEach(e => e.innerText = "");
  document.querySelectorAll("input, textarea").forEach(el => el.classList.remove("input-error"));

  function setError(input, message) {
    input.classList.add("input-error");
    input.parentElement.querySelector(".error").innerText = message;
    isValid = false;
  }

  const fullName = document.querySelector("input[name='fullName']");
  const state = document.querySelector("input[name='state']");
  const addressLine = document.querySelector("textarea[name='addressLine']");
  const pincode = document.querySelector("input[name='pincode']");
  const phone = document.querySelector("input[name='phone']");
  const alternatePhone = document.querySelector("input[name='alternatePhone']");

  
  if (!fullName.value.trim()) setError(fullName, "Name is required");
  if (!state.value.trim()) setError(state, "State is required");
  if (!addressLine.value.trim()) setError(addressLine, "Address is required");
  if (!pincode.value.trim()) setError(pincode, "Pincode is required");
  if (!phone.value.trim()) setError(phone, "Mobile number is required");

  
  if (state.value && !/^[A-Za-z ]+$/.test(state.value))
    setError(state, "State must contain only letters");

      if (fullName.value && !/^[A-Za-z ]+$/.test(fullName.value))
    setError(fullName, "Name  must contain only letters");




  if (pincode.value && !/^\d{6}$/.test(pincode.value))
    setError(pincode, "Enter valid 6 digit pincode");

  if (phone.value && !/^\d{10}$/.test(phone.value))
    setError(phone, "Enter valid 10 digit mobile number");

  if (alternatePhone.value && !/^\d{10}$/.test(alternatePhone.value))
    setError(alternatePhone, "Alternate number must be 10 digits");

  return isValid;
}
</script>
