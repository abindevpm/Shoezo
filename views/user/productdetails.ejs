    <script>
      // swap main image when thumb clicked
      (function () {
        const thumbs = document.querySelectorAll('#thumbs img');
        const main = document.getElementById('mainImage');

        thumbs.forEach(t => {
          t.addEventListener('click', function (e) {
            const full = t.dataset.full;
            if (!full) return;
            main.src = full;
            thumbs.forEach(x => x.classList.remove('active-border'));
            t.classList.add('active-border');
          });
        });

        // sizes
        document.querySelectorAll('[data-size]').forEach(btn => {
          btn.addEventListener('click', (e) => {
            document.querySelectorAll('[data-size]').forEach(b => {
              b.classList.remove('bg-black', 'text-white', 'border-black');
              b.classList.add('bg-white', 'text-gray-800', 'border-gray-300');
            });
            btn.classList.add('bg-black', 'text-white', 'border-black');
          });
        });

        // colors
        document.querySelectorAll('[data-color]').forEach(btn => {
          btn.addEventListener('click', (e) => {
            document.querySelectorAll('[data-color]').forEach(b => b.style.borderColor = '#e5e7eb');
            btn.style.borderColor = '#111827';
          });
        });

        // button handlers
        document.getElementById('addToCartBtn')?.addEventListener('click', () => {
          alert('Add to Cart clicked — integrate backend/cart next.');
        });
        document.getElementById('buyNowBtn')?.addEventListener('click', () => {
          alert('Buy Now clicked — integrate checkout flow next.');
        });

        document.getElementById('submitReviewBtn')?.addEventListener('click', () => {
          const txt = document.getElementById('reviewText')?.value.trim();
          if (!txt) return alert('Please write a review before submitting.');
          alert('Review submitted: "' + txt + '" (Implement backend POST to save it.)');
        });
      })();

    

