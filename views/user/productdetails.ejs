    { name: "Abinav George", date: "3 days ago", rating: 4.7, comment: "Great product, very good quality.", verified: true },
    { name: "Sulochana Sowmaya", date: "2 days ago", rating: 4.9, comment: "Awesome product!", verified: true }
  ];

  const demoSimilar = [
    { _id: 's1', name: "JORDAN 7D", price: 4999, oldPrice: 9999, discount: 50, image: 'https://placehold.co/400x300/18181b/fff?text=JORDAN+7D', rating: 4.9 },
    { _id: 's2', name: "NIKE SPARX", price: 4999, oldPrice: 9999, discount: 50, image: 'https://placehold.co/400x300/60a5fa/fff?text=NIKE+SPARX', rating: 4.5 }
