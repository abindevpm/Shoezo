<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SHOEZO - Enter New Password</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700;900&display=swap" rel="stylesheet">
    <style>

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Roboto', sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    background-color: #f0f0f0;
}

.container {
    display: flex;
    width: 100%;
    max-width: 1200px;
    height: 90vh;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    background-color: #fff;
}

.left-panel {
    width: 50%;
    background-color: #7A28A8;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}

.shoe-image {
    width: 100%;
}

.right-panel {
    width: 50%;
    background-color: #ffffff;
    padding: 40px;
    display: flex;
    flex-direction: column;
}

.logo-section {
    text-align: right;
    margin-bottom: 80px;
}

.logo {
    font-size: 32px;
    font-weight: 900;
    letter-spacing: 2px;
}

.form-container {
    max-width: 400px;
    margin: 50px 0 auto 100px;
}

.title {
    font-size: 24px;
    font-weight: 700;
    margin-bottom: 40px;
}

.input-group {
    margin-bottom: 30px;
}

.form-label {
    font-size: 14px;
    margin-bottom: 5px;
}

input[type="password"] {
    width: 100%;
    padding: 10px 0;
    font-size: 16px;
    border: none;
    border-bottom: 1px solid #ccc;
    outline: none;
}

input[type="password"]:focus {
    border-bottom-color: #000;
}

#error-message {
    color: red;
    font-size: 14px;
    margin-top: -15px;
    margin-bottom: 20px;
}

.actions {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40px;
}

.continue-button {
    width: 150px;
    background-color: #000;
    color: #fff;
    padding: 12px;
    border: none;
    cursor: pointer;
    font-weight: 600;
    border-radius: 5px;
    transition: 0.3s;
}

.continue-button:hover {
    background-color: #333;
}

.back-to-login {
    font-size: 14px;
    color: #666;
    text-decoration: none;
}

    </style>
</head>

<body>

    <div class="container">
        
        <div class="left-panel">
            <img src="/images/jordan.jpeg" class="shoe-image">
        </div>

        <div class="right-panel">

            <header class="logo-section">
                <h1 class="logo">SHOEZO</h1>
            </header>

            <div class="form-container">
                <h2 class="title">Enter New Password</h2>

                <!-- PASSWORD FORM -->
                <form action="/reset-password" method="POST" class="password-form">

                    <div class="input-group">
                        <label class="form-label">Enter new password</label>
                        <input type="password" id="new-password" name="password">
                    </div>

                    <div class="input-group">
                        <label class="form-label">Confirm password</label>
                        <input type="password" id="confirm-password" name="confirmPassword">
                    </div>

                    <!-- INLINE ERROR MESSAGE -->
                    <p id="error-message"></p>

                    <div class="actions">
                        <a href="/login" class="back-to-login">Back to Login</a>
                        <button type="submit" class="continue-button">Continue</button>
                    </div>

                </form>
            </div>
        </div>
    </div>

</body>

<!-- INLINE VALIDATION SCRIPT -->
<script>
document.addEventListener("DOMContentLoaded", function () {

    const form = document.querySelector(".password-form");
    const newPassword = document.getElementById("new-password");
    const confirmPassword = document.getElementById("confirm-password");
    const errorMsg = document.getElementById("error-message");

    form.addEventListener("submit", function (event) {

        const pass = newPassword.value.trim();
        const confirmPass = confirmPassword.value.trim();

        errorMsg.textContent = "";

        if (pass === "" || confirmPass === "") {
            errorMsg.textContent = "All fields are required.";
            event.preventDefault();
            return;
        }

        if (pass.length < 6) {
            errorMsg.textContent = "Password must be at least 6 characters.";
            event.preventDefault();
            return;
        }

        if (pass !== confirmPass) {
            errorMsg.textContent = "Passwords do not match!";
            event.preventDefault();
            return;
        }
    });

});
</script>

</html>
